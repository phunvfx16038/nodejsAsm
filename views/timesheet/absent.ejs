<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/checkin.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <div class="container">

                <h2>Thông tin đăng ký nghỉ phép</h2>
                <table>
                    <tr>
                        <td>Ngày nghỉ đã đăng ký</td>
                        <td>Thời gian</td>
                        <td>Số ngày phép còn lại</td>
                    </tr>
                    <tr>
                        <td>
                            <%absent.date.forEach(function(item){%>
                                <p>
                                    <%= item.day%>
                                </p>
                                <%})%>
                        </td>
                        <td>
                            <%absent.date.forEach(function(item){%>
                                <%if(item.hours==8){ %>
                                    <p> 1 ngày</p>
                                    <%}else if(item.hours==4){%>
                                        <p> 0.5 ngày</p>
                                        <%}else{%>
                                            <p>
                                                <%= item.hours%> giờ
                                            </p>
                                            <%}%>
                                                <%})%>
                        </td>
                        <td>
                            <%= annualLeave%>
                        </td>
                    </tr>
                </table>


            </div>

            <%- include('../includes/end.ejs') %>